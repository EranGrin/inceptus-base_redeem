<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <data>
        <record id="view_pos_config_form" model="ir.ui.view">
            <field name="name">pos.config.form.view</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref='point_of_sale.pos_config_view_form'/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/h2[@name='order']" position='before'>
                    <h2 name="order">PoS Giftcard Coupon</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box" id="pos_gift_coupon_journal">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <div class="content-group mt16">
                                    <div class="row mt16">
                                        <label string="Sale Journal" for="sale_journal" class="col-lg-3 o_light_label"/>
                                        <field name="sale_journal" required='1' domain="[('type', '=', 'cash')]"
                                            options="{'no_create': True}"/>
                                    </div>
                                    <div class="row mt16">
                                        <label string="Reedem Journal" for="reedem_journal" class="col-lg-3 o_light_label"/>
                                        <field name="reedem_journal" required='1' domain="[('type', '=', 'cash')]"
                                            options="{'no_create': True}"/>
                                    </div>
                                    <div class="row mt16">
                                        <label string="Coupon Mode" for="coupon_mode" class="col-lg-3 o_light_label"/>
                                        <field name="coupon_mode" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="ies_pos_order_form" model="ir.ui.view">
            <field name="name">ies.pos.order.form</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref='point_of_sale.view_pos_pos_form'/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lines']//form//field[@name='tax_ids']" position="after">
                    <field name="coupon_id" attrs="{'invisible': [('coupon_id', '=', False)]}" />
                </xpath>
                <xpath expr="//field[@name='lines']//tree" position="attributes">
                    <attribute name="editable"></attribute>
                </xpath>
                <xpath expr="//field[@name='lines']//tree//field[@name='discount']" position="replace">
                    <field name="discount_string" string="Discount"/>
                </xpath>
                <xpath expr="//field[@name='lines']//form//field[@name='discount']" position="attributes">
                    <attribute name="string">Discount</attribute>
                </xpath>
                <xpath expr="//field[@name='lines']//tree//field[@name='tax_ids']" position="after">
                    <field name="coupon_id"/>
                </xpath>
            </field>
        </record>

        <record id="ies_account_journal_coupon" model="ir.ui.view">
            <field name="name">ies.account.journal.coupon</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="coupon" />
                </xpath>
            </field>
        </record>
        

    </data>

</odoo>