<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="ies_product_giftcard_tree">
            <field name="name">ies_product_giftcard_tree</field>
            <field name="model">product.coupon</field>
            <field name="arch" type="xml">
                <tree string="Gift Cards" create="false">
                    <!-- colors="grey:state in ('r');blue:state in ('o');black:state in ('s');red:state in ('e')" -->
                    <field name="name" />
                    <field name="amount" />
                    <field name="rem_amount" />
                    <field name="sale_price" />
                    <field name="create_date" />
                    <field name="sale_date" />
                    <field name="printed" />
                    <field name="expire_date" />
                    <field name="state" />
                    <field name="product_id" />
                    <field name="type" />
                </tree>
            </field>
        </record>

       <record model="ir.ui.view" id="ies_product_coupon_tree">
            <field name="name">ies_product_coupon_tree</field>
            <field name="model">product.coupon</field>
            <field name="arch" type="xml">
                <tree string="Coupons" create="false">
                     <!-- colors="grey:state in ('r');blue:state in ('o');black:state in ('s');red:state in ('e')" -->
                    <field name="name" />
                    <field name="percentage" />
                    <field name="create_date" />
                    <field name="sale_date" />
                    <field name="expire_date" />
                    <field name="sale_price" />
                    <field name="printed" />
                    <field name="state" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ies_product_giftcard_form">
            <field name="name">ies_product_giftcard_form</field>
            <field name="model">product.coupon</field>
            <field name="arch" type="xml">
                <form string="Giftcards" create="false" edit='false'>
                    <header>
                        <field name="state" widget="statusbar" readonly='1'/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <label class="oe_edit_only" for="name"
                                string="Coupon Name" />
                            <h1>
                                <field name="type" readonly='1'/>
                                <field name="name" placeholder="Coupon Name" readonly='1'/>
                            </h1>

                            <div name="options">
                                <div>
                                    <field name="printed" />
                                    <label for="printed" />
                                    <field name="single_use" />
                                    <label for="single_use" />
                                </div>
                            </div>
                        </div>

                        <group>
                            <group>
                                <field name="amount" />
                                <field name="rem_amount" />
                                <field name="product_id" />
                                <field name="pos_order_id"  attrs="{'invisible': [('pos_order_id', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="create_date" />
                                <field name="sale_date" />
                                <!-- <field name="reedem_date" /> -->
                                <field name="expire_date" />
                            </group>
                        </group>

                        <notebook>
                            <page string='Reedem History' name='reedem_history'>
                                <field name='reedem_ids'>
                                   <tree>
                                        <field name="order_id" />
                                        <field name="amount" />
                                        <field name="shop_id" />
                                        <field name="date" />
                                   </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="ies_product_coupon_form">
            <field name="name">ies_product_coupon_form</field>
            <field name="model">product.coupon</field>
            <field name="arch" type="xml">
                <form string="Coupons" create="false" edit='false'>
                    <header>
                        <field name="state" widget="statusbar"  readonly='1'/>
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <label class="oe_edit_only" for="name"
                                string="Coupon Name" />
                            <h1>
                                <field name="type" readonly='1'/> 
                                <field name="name" placeholder="Coupon Name" readonly='1'/>
                            </h1>

                            <div name="options">
                                <div>
                                    <field name="printed" />
                                    <label for="printed" />
                                    <field name="single_use" />
                                    <label for="single_use" />
                                </div>
                            </div>
                        </div>

                        <group>
                            <group>
                                <field name="percentage"/>
                                <field name="product_id" />
                                <field name="pos_order_id"  attrs="{'invisible': [('pos_order_id', '=', False)]}"/>
                            </group>
                            <group>
                                <field name="create_date" />
                                <field name="sale_date" />
                                <!-- <field name="reedem_date" /> -->
                                <field name="expire_date" />
                            </group>
                        </group>

                        <notebook>
                            <page string='Reedem History' name='reedem_history'>
                                <field name='reedem_ids'>
                                   <tree>
                                        <field name="order_id" />
                                        <field name="amount" />
                                        <field name="shop_id" />
                                        <field name="date" />
                                   </tree>
                                </field>
                            </page>

                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

         <record model="ir.ui.view" id="ies_product_template_coupon_tree">
            <field name="name">ies.product.template.coupon.tree</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <tree string="Giftcards">
                    <field name="name" />
                    <field name="discount_type" />
                    <field name="expires_on" />
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ies_product_template_common_form">
            <field name="name">ies.product.template.coupon.form</field>
            <field name="model">product.template</field>
            <field name="arch" type="xml">
                <form string="Giftcard Template">
                    <header>
                        <field name="is_voucher" invisible="1" />
                        <button string="Generate Coupons" type="object" context="{'coupon':1}"
                            name="generate_coupon_wiz" attrs="{'invisible': ['|', ('discount_type', 'in', ['f', 'd']), ('discount_type', '=', False)]}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="open_giftcards" type="object"
                                class="oe_stat_button" icon="fa-ticket"
                                attrs="{'invisible': [('coupon_count', '=', 0)]}"
                                context="{'type':'p'}">
                                <field string="Coupons" name="coupon_count" widget="statinfo" />
                            </button>

                        </div>
                        <field name="image_1920" widget="image"
                            class="oe_avatar" />
                        <div class="oe_title">
                            <label class="oe_edit_only" for="name"
                                string="Template Name" />
                            <h1>
                                <field name="name" placeholder="Template Name"
                                    attrs="{'readonly': [('generated', '=', True)]}" />
                            </h1>
                            <div name="options" groups="base.group_user">
                                <field name="is_coupon" invisible="1"/>
                            </div>
                        </div>
                        <notebook>
                            <page string="Configuration" name="configuration">
                                <group>

                                    <group name="discount">
                                        <field
                                        name="discount_type"
                                        attrs="{
                                            'readonly': [('generated', '=', True)],
                                        }" placeholder="Choose Type"/>
                                        <field name="discount_amount"
                                            attrs="{'readonly': [('generated', '=', True)], 'invisible': ['|', ('discount_type', 'in', ['d', 'p']), ('discount_type', '=', False)],
                                            'required': [('discount_type', '=', 'f')]}" invisible="context.get('hide_discount_amount', True)" />
                                        <field name='lst_price'
                                            attrs="{'invisible': [('discount_type', 'in', ['d'])],
                                            'required': [('discount_type', 'in', ['p', 'f'])],
                                            'readonly': ['|', ('generated', '=', True)]}" string="Sale Price"/>
                                        <field name="cart_limit" />
                                    </group>

                                    <group name="group_general">
                                        <field name="expiry_type" widget="radio" required="1" />
                                        <label for="expiry_interval" attrs="{'invisible': ['|', ('expiry_type', '=', False),('expiry_type', '=', 'd')]}"/>
                                        <div class="o_row mr16" attrs="{'invisible': ['|', ('expiry_type', '=', False),('expiry_type', '=', 'd')]}">
                                            <field name="expiry_interval" attrs="{'readonly': [('generated', '=', True),], 'required': [('expiry_type', '=', 'as')]}" />
                                            <field name="expiry_unit" attrs="{'readonly': [('generated', '=', True)],
                                                                               'required': [('expiry_type', '=', 'as')]}" />
                                        </div>

                                        <field name="expires_on"
                                               attrs="{'readonly': ['|',('generated', '=', True), ('expiry_interval', '>', 0)],
                                                       'invisible': ['|', ('expiry_type', '=', False), ('expiry_type', '=', 'as')],
                                                       'required': [('expiry_type', '=', 'd')]}" readonly="0"/>

                                    </group>

                                    <group>
                                        <field name="single_use" attrs="{'readonly': [('generated', '=', True)]}" />
                                    </group>

                                    <group groups="base.group_no_one">
                                        <field name="generated" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Other Info" name="info" attrs="{'invisible': ['|', ('discount_type', 'in', ['f', 'd']), ('discount_type', '=', False)]}">
                                <group>
                                    <field name="taxes_id" widget="many2many_tags"/>
                                    <field name="supplier_taxes_id" widget="many2many_tags"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_sale_giftcard">
            <field name="name">Giftcard</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_coupon', '=', True), ('discount_type', 'in', ['f', 'd'])]</field>
            <field name="context">{'default_is_coupon':1, 'giftcard':1}</field>
        </record>

        <record id="action_sale_giftcard_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ies_product_template_coupon_tree" />
            <field name="act_window_id" ref="action_sale_giftcard" />
        </record>

        <record id="action_sale_giftcard_view_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="ies_product_template_common_form" />
            <field name="act_window_id" ref="action_sale_giftcard" />
        </record>

        <menuitem id="menu_sale_giftcard" name="Gift Cards"
            parent='point_of_sale.menu_point_root'/>

        <menuitem id="menu_sale_giftcard_conf" name="Templates"
            parent='menu_sale_giftcard' action="action_sale_giftcard"
            sequence='1' />

        <record model="ir.actions.act_window" id="action_sale_coupon">
            <field name="name">Coupons</field>
            <field name="res_model">product.template</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('is_coupon', '=', True), ('discount_type', '=', 'p')]</field>
            <field name="context">{'default_is_coupon':1, 'coupon':1, 'default_discount_type' : 'p'}</field>
        </record>

        <record id="action_sale_coupon_view_tree" model="ir.actions.act_window.view">
            <field eval="1" name="sequence" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ies_product_template_coupon_tree" />
            <field name="act_window_id" ref="action_sale_coupon" />
        </record>

        <record id="action_sale_coupon_view_form" model="ir.actions.act_window.view">
            <field eval="2" name="sequence" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="ies_product_template_common_form" />
            <field name="act_window_id" ref="action_sale_coupon" />
        </record>

        <menuitem id="menu_sale_coupon" name="Coupons"
            parent='point_of_sale.menu_point_root' sequence="11" />

        <menuitem id="menu_sale_coupon_conf" name="Templates"
            parent='menu_sale_coupon' action="action_sale_coupon"
            sequence='1' />

        <record model="ir.actions.act_window" id="menu_action_giftcard">
            <field name="name">Giftcards</field>
            <field name="res_model">product.coupon</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type', 'in', ['f', 'd'])]</field>
            <field name="help" type="html">
                <p>
                    No Giftcard has been generated!
                </p>
                <p>
                    To generate Giftcards, Please Create new giftcard template and
                    generate fixed price giftcards.
                </p>
            </field>
        </record>

        <record id="menu_action_giftcard_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ies_product_giftcard_tree" />
            <field name="act_window_id" ref="menu_action_giftcard" />
        </record>

        <record id="menu_action_giftcard_form_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="ies_product_giftcard_form" />
            <field name="act_window_id" ref="menu_action_giftcard" />
        </record>

        <menuitem id="menu_fixed_giftcard" name="Gift Cards"
            parent='menu_sale_giftcard' action="menu_action_giftcard"
            sequence='2' />

        <record model="ir.actions.act_window" id="menu_action_giftcard_per">
            <field name="name">Coupons</field>
            <field name="res_model">product.coupon</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('type', '=', 'p')]</field>
            <field name="help" type="html">
                <p>
                    No Giftcard Generated
                </p>
                <p>
                    To generate Giftcards, Please Create new giftcard template and
                    generate percentage giftcards.
                </p>
            </field>
        </record>

        <record id="menu_action_coupon_tree_view" model="ir.actions.act_window.view">
            <field eval="1" name="sequence" />
            <field name="view_mode">tree</field>
            <field name="view_id" ref="ies_product_coupon_tree" />
            <field name="act_window_id" ref="menu_action_giftcard_per" />
        </record>

        <record id="menu_action_coupon_form_view" model="ir.actions.act_window.view">
            <field eval="2" name="sequence" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="ies_product_coupon_form" />
            <field name="act_window_id" ref="menu_action_giftcard_per" />
        </record>

        <menuitem id="menu_percentage_giftcard" name="Coupons"
            parent='menu_sale_coupon' action="menu_action_giftcard_per"
            sequence='3' />
    </data>
</odoo>
